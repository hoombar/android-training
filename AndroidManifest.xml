<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.rdyonline.android_training"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="net.rdyonline.android_training.AndroidTraining"
        >
        
        <receiver android:name="net.rdyonline.android_training.alarms.NotificationReceiver" />
        
        <activity
            android:name="net.rdyonline.android_training.landing.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="net.rdyonline.android_training.asynctasks.ASyncTaskActivity"
            android:label="@string/asynctask"
            />
        
        <activity 
            android:name="net.rdyonline.android_training.greendao.GreenDaoActivity"
            android:label="@string/greendao"
            />
        
        <activity 
            android:name="net.rdyonline.android_training.alarms.AlarmActivity"
            android:label="@string/alarms"
            />
        
    </application>

</manifest>
